@model IEnumerable<Web.Models.Produto>
@{
    ViewData["Title"] = "Produtos por Cartegoria";
    var categ = "Nenhum Registro";
    if(Model.Any()){
        categ = Model.FirstOrDefault().Categoria.Nome;
    }
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h4>
           <b>@categ</b>          
        </h4>
    </div>
</div>

<table class="table table-striped table-bordered data_table">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Preço</th>
        <th class="text-center">Ações</th>
    </thead>

    <tbody>

        @foreach(var produto in Model)
        {
            <tr>
                <td>@produto.Id</td>
                <td>@produto.Nome</td>
                <td>@Html.DisplayFor(modelItem => produto.Preco)</td>
                <td align="center">
                    <a href="/Produtos/Form/@produto.Id" class="btn btn-warning btn-xs" title="Editar">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>

                    <button class="btn btn-danger btn-xs delete" data-href="/Produtos/Delete/@produto.Id" 
                    title="Excluir" onclick="return false;">
                        <i class="glyphicon glyphicon-remove"></i>
                    </button>
                </td>
            </tr>
        }

    </tbody>
</table>
<div class="text-right">
    <button type="button" class="btn btn-default btn-sm" title="Voltar" onclick="javascript: history.back();">
        <i class="glyphicon glyphicon-arrow-left"></i>
    </button>
</div>