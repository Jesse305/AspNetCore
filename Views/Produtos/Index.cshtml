@model IEnumerable<Web.Models.Produto>
@{
    ViewData["Title"] = "Produtos";
}


<div class="panel panel-default">
    <div class="panel-heading"><h4><b>Produtos</b></h4></div>
</div>
<a asp-controller="Produtos" asp-action="Form" class="btn btn-success btn-sm">
    <i class="glyphicon glyphicon-plus"></i> Novo Produto
</a>
<hr />

<table class="table table-bordered table-striped data_table" style="margin-top: 10px;">
    <thead>
        <tr>            
            <th>Id</th>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Preço</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var produto in Model)
        {
            <tr>                
                <td>@produto.Id</td>
                <td>@produto.Nome</td>
                <td>@produto.Categoria.Nome</td>
                <td align="right">@Html.DisplayFor(modelItem => produto.Preco)</td>
                <td align="center">
                    <a href="Produtos/Form/@produto.Id" class="btn btn-warning btn-xs" title="Editar">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>

                    <button class="btn btn-danger btn-xs delete" data-href="Produtos/Delete/@produto.Id" 
                    title="Excluir" onclick="return false;">
                        <i class="glyphicon glyphicon-remove"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-right">
    <button type="button" class="btn btn-default btn-sm" title="Voltar" onclick="javascript: history.back();">
        <i class="glyphicon glyphicon-arrow-left"></i>
    </button>
</div>